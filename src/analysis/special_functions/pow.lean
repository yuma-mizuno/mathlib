      ((continuous_at_fst.eventually (gt_mem_nhds hneg)).mono (Œª p hp, rpow_def_of_neg hp _)),
    ((times_cont_diff_at_fst.log hpos.ne').mul times_cont_diff_at_snd).exp.congr_of_eventually_eq
